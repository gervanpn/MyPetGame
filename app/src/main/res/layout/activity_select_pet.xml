<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPet">

    <TextView
        android:id="@+id/textView"
        android:layout_width="192dp"
        android:layout_height="51dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="40dp"
        android:text="@string/select_pet"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ImageButtonCat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/ImageButtonCat"
        android:layout_width="127dp"
        android:layout_height="130dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="477dp"
        android:src="@drawable/cat_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/ImageButtonDog"
        android:layout_width="127dp"
        android:layout_height="130dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/dog_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageButtonCat"
        app:layout_constraintVertical_bias="0.136"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/ImageButtonHamster"
        android:layout_width="127dp"
        android:layout_height="130dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="124dp"
        android:src="@drawable/hamster_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageButtonDog"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />
</androidx.constraintlayout.widget.ConstraintLayout>